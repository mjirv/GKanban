{
	"name": "GKanban",
	"version": "1.0",
	"description": "Adds a Kanban board to your Gmail",
	"manifest_version": 2,
	"options_ui": {
	    "page": "options.html",
    	"chrome_style": true
    },
    "permissions": [
    	"storage"
    ],
	"content_scripts": [
		{
			"matches": ["*://mail.google.com/mail/u/0/*"],
			"js": ["content_script.js"]
		}
	]
}